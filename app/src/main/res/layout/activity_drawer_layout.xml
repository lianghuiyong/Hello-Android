<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200"
        app:srcCompat="@drawable/app_splash_3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_box"
        app:layout_constraintTop_toBottomOf="@+id/top_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/share_image"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/common_ic_share"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/share_image"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="分享"
            android:textSize="@dimen/s14"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_box"
        app:layout_constraintTop_toBottomOf="@+id/share_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/about_image"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/common_ic_about"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/about_image"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="关于"
            android:textSize="@dimen/s14"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/setting_image"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/common_ic_setting"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/setting_image"
            android:layout_marginLeft="@dimen/d15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="设置"
            android:textSize="@dimen/s14"

            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
