<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/black_alpha_160</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/green_500</item>
        <item name="android:lines">1</item>
    </style>
</resources>
